{
	"name": "stuntman",
	"displayName": "Stuntman",
	"description": "Import stuntman from the PSStuntman PowerShell module",
	"version": "0.0.1",
	"icon": "logo.png",
	"publisher": "Jeroen",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:stuntman.ImportStuntman"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Stuntman configuration",
			"properties": {
				"stuntman.databaseFileLocation": {
					"type": "string",
					"description": "The path to the location of the stuntman database file"
				}
			}
		},
		"commands": [
			{
				"command": "stuntman.ImportStuntman",
				"title": "Import stuntman from database"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/sqlite3": "^3.1.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"sqlite3": "^5.0.2"
	}
}
